<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta
        name="viewport"
        content="width=device-width, initial-scale=1.0"
    >
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html,
        body {
            height: 100%;
            width: 100%;
        }

    </style>


    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>

    <main class="p-4">

        <a
            class="bg-blue-500 text-white px-4 py-2 rounded-md"
            href="/create"
        >Create</a>

        <div class="notes p-4 flex gap-4">
            <% notes.forEach(note=>{ %>
            <div class="note p-4 rounded-md shadow-md w-fit max-w-[300px]">
                <h1 class="text-2xl font-bold"><%= note.title %></h1>
                <p class="text-sm text-gray-500"><%= note.description %></p>
            </div>
            <% }) %>
        </div>
    </main>
</body>
</html>
